{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
  },
  "globals": {
    "localStorage": true,
    "fetch": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-async-promise-executor": "off",
    "no-unused-vars": "warn",
    "react/prop-types": "off",
    "react/display-name": "off"
  }
}